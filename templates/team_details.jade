template(name='teamDetails')
	div(class='container-fluid')
		div(class='row')
			h1(class='text-center') #{teamName}
		div(class='row text-center')
			img(src='#{teamLogo}' width='#{imageSize}' height='#{imageSize}' alt='#{teamName}')
		div(class='row')
			table(class='table table-bordered')
				thead
					tr
						td Number
						td Name
						td Position
						td Weight
						td Height
						td Birth date
						td Birth place
				tbody
					each players
						+player
