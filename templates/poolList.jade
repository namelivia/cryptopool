template(name='poolList')
	div(class='col-md-8 col-md-offset-2')
		div(class='row')
			h3 Public pools
		div(class='row')
			table(class='table table-bordered')
				thead
					tr
						td Id
						td Match Id
						td Amount
						td Status Id
						td Participants
						td
				tbody
					each pools 
						+pool
		div(class='row text-right')
			button(class='btn btn-primary btn-success new_pool' value='Create a new pool') Create a new pool
