template(name='poolList')
	div(class='col-md-8 col-md-offset-2')
		div(class='row')
			h3 Public pools
		div(class='row')
			h4(class='text-center') Status: #{displayStatus}
		div(class='row')
			table(class='table table-bordered')
				thead
					tr
						td Id
						td Match Id
						td Amount
						td StatusId
						td Participants
						td
				tbody
					each pools 
						+pool
