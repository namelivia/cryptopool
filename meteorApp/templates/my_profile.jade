template(name='myProfile')
	h3(class='text-center') My profile
	h2 User info
	table(class='table table-bordered')
		thead
			tr
				td Username 
				td Email 
				td Tokens
		tbody
			tr
				td #{userUsername}
				td #{userEmail}
				td #{userTokens}
	h2 Pool history
	if poolHistory.count
		table(class='table table-bordered')
			thead
				tr
					td poolId
					td matchId
			tbody
				each poolHistory
					+poolHistoryEntry(pool=this)
	else
		p The user has not participated in any pool yet
